@model IEnumerable<Category> 
@{
    ViewData["Title"] = "CategoryViewTable";
}

<div>

</div>

    <h1>Index for category</h1>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>



            </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>

        </div>

        </div>

    </div>
    

    <table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Diplay order
            </th>
            <th>
            </th>
            <th>
            </th>

        </tr>
        
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="width:30%">
                  @obj.name
                </td>
            
            
                <td style="width:30%">
                    @obj.displayOrder
                </td>
                <td style="width:30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pen">Edit</i></a>
                    </div>

                </td>
                <td style="width:30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3">Delete</i></a>
                    </div>

                </td>
               
            </tr>

        }

    </tbody>
</table>


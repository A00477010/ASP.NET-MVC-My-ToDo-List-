@{
}
<h1>Edit your task</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit task</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="name"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="displayOrder"></label>
            <input asp-for="displayOrder" class="form-control" />
            <span asp-validation-for="displayOrder" class="text-danger"></span>

        </div>
        <button type="reset" class="btn btn-primary" style="width:150px">Reset</button>
        <a asp-controller="Category" asp-action="CategoryViewTable" style="width:150px" class="btn btn-primary">Back To List</a>
        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
        @*<button type="submit" class="btn btn-primary" style="width:150px">Create</button>*@
        @*Here in the edit button we have not specified any controller or any specific action but when it is called it will go to the create method in the
        category controller. we can also specify those action and controller
        *@
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
